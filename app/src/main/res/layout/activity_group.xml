<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.GroupActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_facultad_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_facultad_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_universidadgrupo" />

        <TextView
            android:id="@+id/tv_integrantes_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_integrantes_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_materia_grupo" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView_ubicacion_grupo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lugar_encuentro" />

        <TextView
            android:id="@+id/tv_lugar_encuentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_lugar_encuentro_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tutor_grupo" />

        <TextView
            android:id="@+id/tv_materia_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_materia_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_carrera_grupo" />

        <TextView
            android:id="@+id/et_nombregrupo_crear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_titulo_grupo"
            android:textAlignment="center"
            android:textColor="@color/colorNegro"
            android:textSize="@dimen/activity_titulo"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_carrera_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_carrera_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_facultad_grupo" />

        <TextView
            android:id="@+id/tv_tutor_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_tutor_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_integrantes_grupo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_integrantes_grupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_integrantes_grupo" />

        <TextView
            android:id="@+id/tv_universidadgrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/tv_universidad_grupo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/activity_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_nombregrupo_crear" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>