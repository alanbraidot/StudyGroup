<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/img"
        />

    <TextView
        android:id="@+id/tv_nombre_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_verticalchico_margin"
        android:textAlignment="center"
        android:textSize="26dp"
        android:text="Nombre Apellido" />

    <TextView
        android:id="@+id/tv_pais_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="PaÃ­s" />

    <TextView
        android:id="@+id/tv_ciudad_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_verticalchico_margin"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="Ciudad, Provincia" />

    <TextView
        android:id="@+id/tv_universidad_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_verticalchico_margin"
        android:textSize="15dp"
        android:text="Universidad" />

    <TextView
        android:id="@+id/tv_facultad_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="15dp"
        android:text="Facultad" />

    <TextView
        android:id="@+id/tv_carrera_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_verticalchico_margin"
        android:textSize="15dp"
        android:text="Carrera" />

    <TextView
        android:id="@+id/tv_email_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecundario"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="15dp"
        android:text="Email" />

    <Button
        android:id="@+id/btn_misgrupos_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNegro"
        android:background="@drawable/botonblanco"
        android:textSize="16dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_verticalgrande_margin"
        android:text="MIS GRUPOS" />

</LinearLayout>